<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ActionSheetStyle converted to default Android styles -->
    <style name="ActionSheetStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#FF6D00</item> <!-- Replaces cancelButtonTextColor -->
        <item name="android:padding">10dp</item> <!-- Replaces actionSheetPadding -->
        <item name="android:textSize">16sp</item> <!-- Replaces actionSheetTextSize -->
        <!-- Additional items removed as they were specific to ActionSheet -->
    </style>

    <style name="roundedImageView">
        <item name="android:shape">rectangle</item>
        <item name="android:radius">13dp</item> <!-- Standard corner radius -->
    </style>

    <style name="roundedImageViewAppDetails">
        <item name="android:shape">rectangle</item>
        <item name="android:radius">39dp</item>
    </style>

    <style name="circleImageView">
        <item name="android:shape">rectangle</item>
        <item name="android:radius">12dp</item>
    </style>

</resources>
